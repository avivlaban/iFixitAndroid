<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/guide_create_step_edit_video_right_margin">

    <ImageView
        android:id="@+id/step_edit_video_poster"
        android:layout_width="@dimen/guide_image_width"
        android:layout_height="@dimen/guide_image_height"
        android:contentDescription="@string/guide_create_step_video_description"/>

    <RelativeLayout
        android:id="@+id/video_play_button_container"
        style="@style/GuideMediaMain"
        android:layout_width="@dimen/guide_image_width"
        android:layout_height="@dimen/guide_image_height">

        <ImageButton
            android:id="@+id/video_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/video_play_button_description"
            android:src="@drawable/video_play_button_selector"/>
    </RelativeLayout>

</RelativeLayout>
