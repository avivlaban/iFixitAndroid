<RelativeLayout android:id="@+id/insert_testmode_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".activities.InsertGateActivity">

    <TextView
        android:id="@+id/insert_connected_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:text="@string/insert_connected"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute"/>

    <TextView
        android:id="@+id/insert_test_mode_status_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insert_connected_title"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:text="@string/insert_active_inserts_test_mode"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute"/>

    <TextView
        android:id="@+id/insert_active_inserts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insert_test_mode_status_headline"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:text="@string/insert_default_test_mode_value"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        tools:ignore="UnusedAttribute"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp">


        <Button
            android:id="@+id/btnDisconnectSession"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="@string/insert_button_disconnect_this_session"
            android:textSize="16sp"
            android:drawableLeft="@drawable/insert_btn_disconnect_this_session"
            android:drawablePadding="25dp"/>

        <Button
            android:id="@+id/btnDisconnectPermanently"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:text="@string/insert_button_disconnect_permanently"
            android:textSize="16sp"
            android:drawableLeft="@drawable/insert_btn_disconnect_permanent"
            android:drawablePadding="5dp"/>

    </LinearLayout>

</RelativeLayout>
