<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="abc_action_bar_embed_tabs_pre_jb">true</bool>
    <bool name="abc_config_allowActionMenuItemTextWithIcon">true</bool>
    <dimen name="abc_action_bar_default_height_material">48dp</dimen>
    <dimen name="abc_action_bar_progress_bar_size">32dp</dimen>
    <dimen name="abc_text_size_subtitle_material_toolbar">12dp</dimen>
    <dimen name="abc_text_size_title_material_toolbar">14dp</dimen>
    <dimen name="action_bar_switch_padding">6dip</dimen>
    <dimen name="guide_image_spacing">4dp</dimen>
    <dimen name="guide_thumbnail_spacing">4dp</dimen>
    <dimen name="page_padding">4dp</dimen>
    <dimen name="step_edit_title_text_bottom_spacing">8dp</dimen>
    <style name="GuideMediaMain">
        <item name="android:layout_marginRight">@dimen/guide_image_spacing</item>
        <item name="android:layout_marginBottom">@dimen/guide_image_spacing</item>
    </style>
    <style name="GuideStepLines">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="GuideStepLinesContainer">
        <item name="android:paddingTop">@dimen/page_padding</item>
        <item name="android:paddingRight">@dimen/page_padding</item>
        <item name="android:paddingBottom">@dimen/page_padding</item>
        <item name="android:paddingLeft">8dp</item>

        <item name="android:background">@drawable/left_border_bg</item>
    </style>
    <style name="GuideStepWrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <style name="Thumbnail">
        <item name="android:background">@color/image_border</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="ThumbnailContainer">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ThumbnailList">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>